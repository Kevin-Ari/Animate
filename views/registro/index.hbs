<section class="registro pestaña">
    <p class="titulos">Registro</p>

    <form class="form" action="/registro/" method="POST">

        <div class="form__content">
            <div class="form__inputs">
                <label for="name">Nombre</label>
                <input type="text" class="form__campo" name="nombre" id="name" placeholder="Animate" maxlength="30"
                    required>
            </div>
            <div class="form__inputs">
                <label for="lastName">Apellido</label>
                <input type="text" class="form__campo" name="apellido" id="lastName" placeholder="Digital"
                    maxlength="30" required>
            </div>
            <div class="form__inputs">
                <label for="email">Email</label>
                <input type="email" class="form__campo" name="email" id="email" placeholder="animatedigital@gmail.com"
                    maxlength="30" required>
            </div>
            <div class="form__inputs">
                <label for="job">Empresa</label>
                <input type="text" class="form__campo" maxlength="30" name="empresa" id="job" placeholder="Animate"
                    required>
            </div>
            <div class="form__inputs">
                <label for="password">Contraseña</label>
                <input type="password" class="form__campo" maxlength="16" name="contra" id="password" required>
            </div>
            <div class="form__inputs">
                <label for="validatePassword">Confirmar Contraseña</label>
                <input type="password" class="form__campo" name="validatePassword" id="validatePassword" maxlength="16"
                    required>
            </div>
        </div>
        <button type="submit" class="botones">¡ Registrarme !</button>
    </form>

</section>